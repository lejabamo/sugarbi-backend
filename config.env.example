# Configuración de SugarBI
# Copia este archivo como .env y ajusta los valores según tu entorno

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=toor
DB_NAME=sugarbi

# Security Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=1000 per hour, 100 per minute
RATE_LIMIT_LOGIN=5 per minute
RATE_LIMIT_API=100 per hour

# CORS Configuration
CORS_ORIGINS=http://localhost:5001,http://127.0.0.1:5001
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Logging
LOG_LEVEL=INFO
SECURITY_LOG_FILE=logs/security.log
AUDIT_LOG_FILE=logs/audit.log

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SESSION_COOKIE_SECURE=True
# SECRET_KEY=your-production-secret-key-here
# DB_PASSWORD=your-production-db-password



